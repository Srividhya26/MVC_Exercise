
@{
    ViewData["Title"] = "UpdateAuthor";
}

@model BookDAL.Models.Author

<form method="post" asp-action="UpdateAuthor">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <h3> Update Author </h3>
    </div>

    <div class="form-group row">
        <div class="col-6">
            <label asp-for="Name"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-4">
            <input type="submit" class="btn btn-info w-50" />
        </div>
        <div class="col-4">
            <a asp-action="Index" class="btn btn-danger w-50"> Back </a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


