@inject Microsoft.AspNetCore.Identity.SignInManager<Application> signInManager

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="LogOff" asp-controller="Base">
        <ul class="nav navbar-nav">
            <li class="text-dark nav-link">Hello, @User.Identity.Name! </li>
            <li><a class=" nav-link  text-dark" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link  text-dark" id="registerLink" asp-controller="Base" asp-action="Register">Register</a>
        </li>
        <li>
            <a class="nav-link  text-dark" id="loginLink" asp-controller="Base" asp-action="Login">Sign In</a>
        </li>
    </ul>
}